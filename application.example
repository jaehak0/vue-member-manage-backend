app:
  frontend:
    base-urls:
      - http://localhost:3000

  cors:
    max-age: 3600

spring:
  application:
    name: vue-member-manage-backend
  # 데이터베이스 설정 (H2)
  datasource:
    url: jdbc:h2:file:./data/testdb;AUTO_SERVER=TRUE;AUTO_SERVER_PORT=9090
    driver-class-name: org.h2.Driver
    username: sa
    password:

  
  # H2 콘솔 활성화 (개발용)
  h2:
    console:
      enabled: true
      path: /h2-console
      settings:
        web-allow-others: true  # 외부 접근 허용

  # JPA 설정
  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.H2Dialect
        format_sql: true

  # Jackson 설정
  jackson:
    property-naming-strategy: SNAKE_CASE
    default-property-inclusion: NON_NULL

  # DevTools 설정 (핫 리로드)
  devtools:
    restart:
      enabled: true
      exclude: static/**,public/**
    livereload:
      enabled: true
      port: 35729

# 서버 설정
server:
  port: 8080
  servlet:
    context-path: /
    encoding:
      charset: UTF-8
      enabled: true

# 로깅 설정
logging:
  level:
    com.saeum.vuemembermanagebackend: DEBUG
    org.springframework.web: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

